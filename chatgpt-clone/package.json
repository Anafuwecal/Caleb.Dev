{
  "name": "chatgpt-clone",
  "version": "1.0.0",
  "description": "A professional ChatGPT-style web application with Vue.js frontend and Node.js backend",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && echo 'Backend build complete'",
    "start": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && rm -rf node_modules package-lock.json",
    "clean:frontend": "cd frontend && rm -rf node_modules package-lock.json",
    "reset": "npm run clean && npm run setup"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/chatgpt-clone.git"
  },
  "keywords": [
    "chatgpt",
    "ai",
    "vue",
    "nodejs",
    "express",
    "openai",
    "chat",
    "assistant",
    "fullstack"
  ],
  "author": "ChatGPT Clone Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/chatgpt-clone/issues"
  },
  "homepage": "https://github.com/yourusername/chatgpt-clone#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}